@model IEnumerable<SSM_V5.Models.Shift>
@{
    ViewBag.Title = "Your Shifts";
}

<h2>Your Posted Shifts</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr class="table">
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a class="btn btn-primary" @Html.ActionLink("Edit", "Edit", new { id = item.ShiftID })  <a class="btn btn-primary" @Html.ActionLink("Delete", "Delete", new { id = item.ShiftID })
</td>
        </tr>

    }

</table>



