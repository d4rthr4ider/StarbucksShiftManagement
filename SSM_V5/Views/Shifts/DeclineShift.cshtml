@model SSM_V5.Models.ManageShiftViewModel
@{
    ViewBag.Title = "Decline Shift";
}

<style>
    .labelpad {
        padding-top: 7px;
    }
</style>
<h2>Decline Shift</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ShiftModelObject.ShiftID)

    <div class="form-horizontal">
        <div class="panel panel-info">
            <div class="panel-heading">Shift Details</div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ShiftModelObject.Date, "Shift Date", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => Model.ShiftModelObject.Date)
                    </div>


                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShiftModelObject.StartTime, "Start Time", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => model.ShiftModelObject.StartTime)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ShiftModelObject.EndTime, "End Time", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => model.ShiftModelObject.EndTime)
                    </div>
                </div>
            </div>
        </div>
        <p></p>
        <div class="panel panel-warning">
            <div class="panel-heading">Covering Partner</div>
            <div class="panel-body">
                <div class="form-group">
                    <p style="font-weight: bold" class="control-label col-md-2">Name</p>

                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => model.UserModelObject.FirstName) @Html.DisplayFor(model => model.UserModelObject.LastName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserModelObject.StoreNum, "Store Number", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => model.UserModelObject.StoreNum)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserModelObject.StarCount, "Star Count", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 labelpad">
                        @Html.DisplayFor(model => model.UserModelObject.StarCount)
                    </div>
                </div>
            </div>
        </div>

              <p><input type="submit" value="Confirm" class="btn btn-success" />  <a class="btn btn-primary" @Html.ActionLink("Back to List", "ManageShifts")</p>
                </div>
 
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}