@model SSM_V5.Models.Shift

@{
    ViewBag.Title = "Edit";
}
<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css" type="text/css" />
    <script src="https://code.jquery.com/jquery-2.2.2.js"></script>
    <script src="https://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.timepicker.min.js"></script>
    <link rel="stylesheet" href="~/Content/jquery.timepicker.css" type="text/css" />
    <script language="javascript" type="text/javascript">

        $(function () {
            $('.datepicker').datepicker({
                showOptions: { speed: 'fast' },
                changeMonth: true,
                changeYear: true,
                dateFormat: 'mm/dd/yy',
                gotoCurrent: true
            });
            $('.timepicker').timepicker();
        });
    </script>
</head>

<h2>Edit Shift</h2>
<h4>Edit the details of your posted shift.</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="panel panel-info">
            <div class="panel-heading">Shift Details</div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ShiftID)
                @Html.HiddenFor(model => model.StoreNum)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.IsCovered)
                <div class="form-group">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Date, new { @Value = Model.Date.ToString("MM/dd/yyyy"), @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.StartTime, new { @Value = Model.StartTime.ToString("hh:mm tt"), @class = " form-control timepicker" })
                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.EndTime, new { @Value = Model.EndTime.ToString("hh:mm tt"), @class = " form-control timepicker" })
                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>


        <input type="submit" value="Save" class="btn btn-success" />  <a class="btn btn-primary" @Html.ActionLink("Back to List", "UserShiftIndex")

    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @Scripts.Render("~/bundles/jstimepicker")
    @Styles.Render("~/bundles/csstimepicker")


}
