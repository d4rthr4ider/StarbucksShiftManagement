{

    <p>
        <a class="btn btn-primary" @Html.ActionLink("Edit", "AdminEdit", new { id = Model.Id })
    </p>
    <p>
        <a class="btn btn-primary" @Html.ActionLink("Back to List", "Index")
    </p>
}
