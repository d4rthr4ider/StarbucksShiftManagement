@model SSM_V5.Models.AspNetUser

@{
    ViewBag.Title = "Details";
 }

<style>
    .labelpad {
        padding-top: 7px;

    }
    .image {
        position: relative;
        float: left;
    }

    .text {
        left: 0;
        position: absolute;
        text-align: center;
        top: 30px;
        width: 100%
    }
</style>

<h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
<div class="form-horizontal">
    <div class="panel panel-info">
        <div class="panel-heading">Profile Details</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10 labelpad">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber, "Phone Number", htmlAttributes: new { @class = "control-label col-md-2" })


                <div class="col-md-10 labelpad">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 labelpad">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })


                <div class="labelpad col-md-10">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })


                <div class="labelpad col-md-10">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Store.StoreName, "Store Name", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10 labelpad">
                    @Html.DisplayFor(model => model.Store.StoreName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StarCount, "Star Count", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 labelpad">
                    <span class="font-size:200%"> @Html.DisplayFor(model => model.StarCount)</span>  <img class="image" title="Click to add a star!" style="width:10%;cursor: pointer;" onmouseover="" src="~/Content/star_small_arrow.png" onclick="location.href='@Url.Action("AddStar", "Profile", new { id = Model.Id })'"/>
                </div>
            </div>
        </div>
        </div>
    </div>
<p>
